{
  "name": "educhain-backend",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently -n api,indexer -c auto \"npm:dev:api\" \"npm:dev:indexer\"",
    "dev:api": "tsx watch src/api/server.ts",
    "dev:indexer": "tsx watch src/indexer/indexer.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/api/server.js",
    "start:indexer": "node dist/indexer/indexer.js",
    "lint": "eslint .",
    "format": "prettier -w .",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "query-events": "node query-events.js"
  },
  "dependencies": {
    "@fastify/cors": "11.2.0",
    "@fastify/helmet": "13.0.2",
    "@fastify/rate-limit": "10.3.0",
    "@fastify/swagger": "9.6.1",
    "@fastify/swagger-ui": "5.2.3",
    "@mysten/sui": "1.45.2",
    "@prisma/client": "7.1.0",
    "dotenv": "17.2.3",
    "fastify": "5.6.2",
    "pino": "10.1.0",
    "pino-pretty": "13.1.3",
    "zod": "4.1.13"
  },
  "devDependencies": {
    "@eslint/js": "9.39.1",
    "@types/node": "^25.0.1",
    "concurrently": "9.2.1",
    "eslint": "9.39.1",
    "prettier": "3.7.4",
    "prisma": "7.1.0",
    "tsx": "4.21.0",
    "typescript": "5.9.3"
  }
}
